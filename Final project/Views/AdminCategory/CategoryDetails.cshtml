@model Final_project.Models.category
@{
    ViewData["Title"] = "Category Details";
    Layout = "AdminLayout";

}
<style>
    /* Main Content */
    .main-content {
        flex: 1;
        padding: 2rem;
        background: var(--amazon-light);
    }

    .dashboard-title {
        margin-bottom: 1.5rem;
        padding-bottom: 0.8rem;
        border-bottom: 2px solid var(--amazon-orange);
        animation: fadeIn 1s ease;
    }

        .dashboard-title h1 {
            color: var(--amazon-dark);
            font-size: 2.2rem;
            position: relative;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .dashboard-title h1:after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 0;
                width: 60px;
                height: 4px;
                background: var(--amazon-orange);
                border-radius: 2px;
            }

    /* Category Details Card */
    .category-details-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
        border-top: 4px solid var(--amazon-orange);
        animation: cardEntrance 0.6s ease-out;
        animation-fill-mode: backwards;
    }

    .category-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding: 20px;
        animation: slideInLeft 0.8s ease;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .category-image-container {
        position: relative;
        margin-right: 2rem;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.4s;
    }

    .category-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        display: block;
    }

    .category-image-container:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .category-info {
        flex: 1;
    }

        .category-info h1 {
            font-size: 2.2rem;
            color: var(--amazon-dark);
            margin-bottom: 0.5rem;
        }

    .category-id {
        font-size: 1rem;
        color: #666;
        margin-bottom: 1rem;
        background: rgba(0,0,0,0.03);
        padding: 5px 15px;
        border-radius: 20px;
        display: inline-block;
    }

    .status-container {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .status-badge {
        padding: 8px 20px;
        border-radius: 30px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-block;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .status-active {
        background: linear-gradient(135deg, var(--amazon-success), #00c16e);
        color: white;
        animation: pulse 2s infinite;
    }

    /* Enhanced Row-based Properties */
    .properties-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .property-section {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .property-section:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .property-section:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--amazon-orange);
        }

    .section-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 1.5rem;
        padding-bottom: 0.8rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

        .section-header i {
            font-size: 1.5rem;
            color: var(--amazon-orange);
        }

        .section-header h2 {
            font-size: 1.3rem;
            color: var(--amazon-dark);
        }

    .property-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .property-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
        padding: 0.8rem 0;
        border-bottom: 1px dashed rgba(0, 0, 0, 0.1);
    }

        .property-item:last-child {
            border-bottom: none;
        }

    .property-label {
        font-weight: 600;
        color: var(--amazon-dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .property-label i {
            color: var(--amazon-orange);
            width: 20px;
            font-size: 0.9rem;
        }

    .property-value {
        color: #555;
        padding-left: 28px;
        transition: all 0.3s;
        word-break: break-word;
    }

        .property-value:hover {
            color: var(--amazon-dark);
        }

    .empty-value {
        color: #999;
        font-style: italic;
    }

    .property-link {
        color: var(--amazon-blue);
        text-decoration: none;
        transition: all 0.3s;
        padding: 3px 8px;
        border-radius: 4px;
        background: rgba(20, 110, 180, 0.05);
        display: inline-block;
    }

        .property-link:hover {
            color: var(--amazon-orange);
            background: rgba(255, 153, 0, 0.1);
            text-decoration: none;
        }

    /* Enhanced Action Buttons */
    .action-section {
        background: rgba(255, 153, 0, 0.03);
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 2rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    .timestamps {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .timestamp {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.9rem;
        color: #666;
    }

        .timestamp i {
            color: var(--amazon-orange);
        }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .action-btn {
        padding: 0.9rem 1.8rem;
        border-radius: 50px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .action-btn:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: all 0.6s;
            z-index: -1;
            transform: translateX(-100%);
        }

        .action-btn:hover:before {
            transform: translateX(100%);
        }

        .action-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .action-btn i {
            transition: all 0.3s;
        }

        .action-btn:hover i {
            transform: scale(1.2);
        }

    .btn-edit {
        background: linear-gradient(135deg, var(--amazon-info), #3da5e0);
        color: white;
    }

    .btn-delete {
        background: linear-gradient(135deg, var(--amazon-danger), #ff6b6b);
        color: white;
    }

    .btn-back {
        background: linear-gradient(135deg, #95a5a6, #a4b0be);
        color: white;
    }

    /* Animations */
    @@keyframes slideDown {
        from

    {
        transform: translateY(-100%);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes cardEntrance {
        from

    {
        opacity: 0;
        transform: scale(0.9) translateY(40px);
    }

    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }

    }

    @@keyframes slideInLeft {
        from

    {
        opacity: 0;
        transform: translateX(-50px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(255, 153, 0, 0.4);
    }

    70% {
        transform: scale(1.05);
        box-shadow: 0 0 0 12px rgba(255, 153, 0, 0);
    }

    100% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(255, 153, 0, 0);
    }

    }

    /* Responsive */
    @@media (max-width: 992px) {
        .sidebar

    {
        width: 70px;
    }

    .sidebar-item span {
        display: none;
    }

    .sidebar-item i {
        margin-right: 0;
    }

    }

    @@media (max-width: 768px) {
        .amazon-header

    {
        flex-direction: column;
        padding: 1rem;
    }

    .logo-section {
        margin-bottom: 1rem;
    }

    .search-bar {
        width: 100%;
        margin-bottom: 1rem;
    }

    .user-actions {
        width: 100%;
        justify-content: space-around;
    }

    .category-header {
        flex-direction: column;
        text-align: center;
    }

    .category-image-container {
        margin-right: 0;
        margin-bottom: 1.5rem;
    }

    .property-list {
        grid-template-columns: 1fr;
    }

    .action-section {
        flex-direction: column;
        gap: 20px;
    }

    .action-buttons {
        width: 100%;
        justify-content: center;
    }

    }
</style>
<main class="main-content">
    <div class="dashboard-title">
        <h1><i class="fas fa-tag"></i> Category Details</h1>
    </div>

    <!-- Category Details Card -->
    <div class="category-details-card">
        <div class="category-header">
            <div class="category-image-container">
                <img src="/images/categories/@Model.image_url" alt="@Model.name" class="category-image">
            </div>
            <div class="category-info">
                <h1>@Model.name</h1>
                <div class="category-id">ID: @Model.id</div>
                <div class="status-container">
                    <div class="status-badge @(Model.is_active == true ? "status-active" : "status-inactive")">
                        <i class="fas fa-bolt"></i> @(Model.is_active == true ? "Active" : "Inactive")
                    </div>
                    <div class="status-badge">
                        <i class="fas fa-layer-group"></i> @ViewBag.SubcategoryCount Subcategories
                    </div>
                    <div class="status-badge">
                        <i class="fas fa-box"></i> @ViewBag.ProductCount Products
                    </div>
                </div>
            </div>
        </div>

        <!-- Properties Container -->
        <div class="properties-container">
            <!-- Basic Info -->
            <div class="property-section">
                <div class="section-header">
                    <i class="fas fa-info-circle"></i>
                    <h2>Basic Information</h2>
                </div>
                <div class="property-list">
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-font"></i> Name</div>
                        <div class="property-value">@Model.name</div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-align-left"></i> Description</div>
                        <div class="property-value">@Model.description</div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-image"></i> Image URL</div>
                        <div class="property-value">
                            <a href="@Model.image_url" class="property-link">@Model.image_url</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hierarchy -->
            <div class="property-section">
                <div class="section-header"><i class="fas fa-sitemap"></i><h2>Hierarchy</h2></div>
                <div class="property-list">
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-level-up-alt"></i> Parent Category</div>
                        <div class="property-value">
                            @if (Model.ParentCategory != null)
                            {
                                    <a href="#" class="property-link">@Model.ParentCategory.name</a>
                            }
                            else
                            {
                                    <span class="property-link empty-value">No parent</span>
                            }
                        </div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-level-down-alt"></i> Subcategories</div>
                        <div class="property-value">@ViewBag.SubcategoryCount</div>
                    </div>
                </div>
            </div>

            <!-- Status & Activity -->
            <div class="property-section">
                <div class="section-header"><i class="fas fa-chart-line"></i><h2>Status & Activity</h2></div>
                <div class="property-list">
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-toggle-on"></i> Active</div>
                        <div class="property-value">@(Model.is_active == true ? "Yes" : "No")</div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-trash"></i> Deleted</div>
                        <div class="property-value">@(Model.is_deleted ? "Yes" : "No")</div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-calendar-plus"></i> Created At</div>
                        <div class="property-value">@Model.created_at?.ToString("yyyy-MM-dd HH:mm:ss")</div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-calendar-check"></i> Last Modified</div>
                        <div class="property-value">@Model.last_modified_at?.ToString("yyyy-MM-dd HH:mm:ss")</div>
                    </div>
                </div>
            </div>

            <!-- User Info -->
            <div class="property-section">
                <div class="section-header"><i class="fas fa-users"></i><h2>User Information</h2></div>
                <div class="property-list">
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-user-plus"></i> Created By</div>
                        <div class="property-value">
                            <a href="#" class="property-link">@Model.CreatedByUser?.Email</a>
                        </div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-user-edit"></i> Last Modified By</div>
                        <div class="property-value">
                            <a href="#" class="property-link">@Model.LastModifiedByUser?.Email</a>
                        </div>
                    </div>
                    <div class="property-item">
                        <div class="property-label"><i class="fas fa-user-minus"></i> Deleted By</div>
                        <div class="property-value">
                            @if (!string.IsNullOrEmpty(Model.deleted_by))
                            {
                                    <a href="#" class="property-link">@Model.DeletedByUser?.Email</a>
                            }
                            else
                            {
                                    <span class="empty-value">Not deleted</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-section">
            <div class="timestamps">
                <div class="timestamp">
                    <i class="fas fa-calendar-plus"></i> Created: @Model.created_at?.ToString("yyyy-MM-dd HH:mm:ss")
                </div>
                <div class="timestamp">
                    <i class="fas fa-calendar-check"></i> Updated: @Model.last_modified_at?.ToString("yyyy-MM-dd HH:mm:ss")
                </div>
            </div>
            <div class="action-buttons">
                <button class="action-btn btn-edit"><i class="fas fa-edit"></i> Edit Category</button>
                <button class="action-btn btn-delete"><i class="fas fa-trash-alt"></i> Delete Category</button>
                <a href="/AdminCategory/Index" class="action-btn btn-back"><i class="fas fa-arrow-left"></i> Back to Categories</a>
            </div>
        </div>
    </div>
</main>