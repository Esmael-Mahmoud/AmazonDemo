@using Final_project.ViewModel.CustomerService
@model List<SupportTicketViewModel>
@{
    ViewData["Title"] = "Support Tickets";
    var isSupportOrAdmin = ViewBag.IsSupportOrAdmin ?? false;
    var isCustomer = ViewBag.IsCustomer ?? false;
    var isSeller = ViewBag.IsSeller ?? false;
}
<link href="/css/CustomerProfile.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <partial name="_SideBar"/>
        <div class="col-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Support Tickets</h2>
                @if (isCustomer)
                {
                    <a href="@Url.Action("CreateTicket")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Ticket
                    </a>
                }
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Created</th>
                                        <th>Messages</th>
                                        <th>Last Message</th>
                                        @if (isSupportOrAdmin)
                                        {
                                            <th>User</th>
                                        }
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("TicketDetails", new { id = ticket.Id })" class="text-decoration-none">
                                                    @ticket.Subject
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(ticket.Status == "Open" ? "warning" : ticket.Status == "Resolved" ? "success" : "secondary")">
                                                    @ticket.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(ticket.Priority == "Critical" ? "danger" : ticket.Priority == "High" ? "warning" : ticket.Priority == "Medium" ? "info" : "secondary")">
                                                    @ticket.Priority
                                                </span>
                                            </td>
                                            <td>@(ticket.CreatedAt?.ToString("MMM dd, yyyy") ?? "Unknown")</td>
                                            <td>@ticket.MessageCount</td>
                                            <td>@(ticket.LastMessageAt?.ToString("MMM dd, yyyy HH:mm") ?? "-")</td>
                                            @if (isSupportOrAdmin)
                                            {
                                                <td>@ticket.UserName</td>
                                            }
                                            <td>
                                                <a href="@Url.Action("TicketDetails", new { id = ticket.Id })" class="btn btn-sm btn-outline-primary">
                                                    View Details
                                                </a>
                                                @if (ticket.CanManage && ticket.Status != "Resolved")
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="resolveTicket('@ticket.Id')">
                                                        Resolve
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No support tickets found</h4>
                            @if (isCustomer)
                            {
                                <p class="text-muted">Create your first support ticket to get help from our team.</p>
                                <a href="@Url.Action("CreateTicket")" class="btn btn-primary">Create Ticket</a>
                            }
                            else
                            {
                                <p class="text-muted">No tickets available for your role.</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (isSupportOrAdmin)
{
    <script>
        function resolveTicket(ticketId) {
            if (confirm('Are you sure you want to resolve this ticket?')) {
                fetch('/CustomerService/ResolveTicket', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'ticketId=' + ticketId
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to resolve ticket');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to resolve ticket');
                });
            }
        }
    </script>
}