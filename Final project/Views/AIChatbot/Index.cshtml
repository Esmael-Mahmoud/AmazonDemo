
<title>Simple Chat UI</title>

<style>
    /* Minimal custom CSS for things Bootstrap doesn't cover */

    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f5f5f5;
    }

    #chat-window {
        border: 1px solid #ccc;
        background-color: white;
        height: 400px;
        overflow-y: auto;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 8px;
    }

    .message {
        max-width: 70%;
        margin: 8px 0;
        padding: 10px 15px;
        border-radius: 20px;
        display: inline-block;
        clear: both;
        word-wrap: break-word;
    }

    .user {
        background-color: #dcf8c6;
        float: right;
        text-align: right;
    }

    .assistant {
        background-color: #f1f0f0;
        float: left;
        text-align: left;
    }

    #input-area {
        display: flex;
        gap: 10px;
    }

    #message-input {
        flex: 1;
        padding: 8px;
    }

    #send-btn {
        padding: 8px 16px;
    }
</style>



<div class="bg-light">
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Chat Assistant</h5>
                <button id="new-chat-btn" class="btn btn-sm btn-light">New Chat</button>
            </div>

            <div class="card-body">
                <!-- Previous chats dropdown -->
                <div class="mb-3">
                    <select class="form-select" id="previous-chats">
                        <option selected>Select a previous chat...</option>
                    </select>
                </div>

                <!-- Chat window -->
                <div id="chat-window" class="bg-white p-3 mb-3 rounded border"></div>

                <!-- Input area -->
                <div class="input-group mb-3">
                    <input type="text" id="message-input" class="form-control" placeholder="Type your message...">
                    <button id="send-btn" class="btn btn-warning">Send</button>
                </div>

                <!-- File uploads -->
                @* <div class="d-flex gap-2 mb-3">
                    <div class="flex-grow-1">
                        <input type="file" accept="image/*" id="image-input" class="form-control form-control-sm">
                    </div>
                </div>
                <div id="image-preview" class="mb-3"></div> *@
            </div>
        </div>

        <!-- Semantic similarity section -->
        @* <div class="card mt-4 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Semantic Similarity Demo</h5>
            </div>
            <div class="card-body">
                <div class="input-group mb-3">
                    <input type="text" id="embedding-input" class="form-control" placeholder="Type something to match...">
                    <button id="embedding-btn" class="btn btn-outline-secondary">Find Closest</button>
                </div>
                <div id="embedding-result" class="text-success"></div>
            </div>
        </div> *@
    </div>
</div>


